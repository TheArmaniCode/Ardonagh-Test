@model List<ArdonaghTest.Models.CustomerModel>

<!-- Modal -->
@using(Html.BeginForm("AddCustomer", "Home"))
{
    <div class="modal" id="addCustomerModal" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3>Add New Customer</h3>
          </div>
          <div class="modal-body">
                <h2>Name</h2>
                <input type="text" size="10" name="inName" class="textBox" required/>
                <h2>Age</h2>
                <input type="number" size="10" name="inAge" class="textBox" required/>
                <h2>Postcode</h2>
                <input type="text" size="10" name="inPostcode" class="textBox" required/>
                <h2>Height</h2>
                <input type="number" step="0.01" size="10" name="inHeight" class="textBox" required/>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-primary" name="btnAddCustomer" value="+Add Customer">
          </div>
        </div>
      </div>
    </div>
}