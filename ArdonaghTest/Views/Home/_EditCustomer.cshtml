@model List<ArdonaghTest.Models.CustomerModel>

<!-- Modal -->
@using(Html.BeginForm("EditCustomer", "Home"))
{
    <div class="modal" id="editCustomerModal" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3>Edit Customer</h3>
          </div>
          <div class="modal-body">
                <h2>Name</h2>
                <input type="text" size="10" name="inName" @*value="@Model[0].Name"*@ class="textBox" required/>
                <h2>Age</h2>
                <input type="number" size="10" name="inAge" @*value="@Model[0].Age"*@ class="textBox" required/>
                <h2>Postcode</h2>
                <input type="text" size="10" name="inPostcode" @*value="@Model[0].Postcode"*@ class="textBox" required/>
                <h2>Height</h2>
                <input type="number" step="0.01" size="10" name="inHeight" @*value="@Model[0].Height"*@ class="textBox" required/>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-primary" name="btnAddCustomer" value="Save Changes">
          </div>
        </div>
      </div>
    </div>
}